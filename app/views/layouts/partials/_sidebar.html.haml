// Sidebar
%aside.main-sidebar.sidebar-dark-danger.elevation-4
  %a.brand-link.bg-danger{:href => "#{root_path}"}
    %img.brand-image.img-circle.elevation-3{:src => "#{asset_pack_path('packs/images/AdminLTELogo.png')}", :style => "opacity: .8"}/
    %span.brand-text.font-weight-light SIGMA
  .sidebar
    .user-panel.mt-3.pb-3.mb-3.d-flex
      .image
        %img.img-circle.elevation-2{:src => "#{asset_pack_path('packs/images/user2-160x160.jpg')}"}
      .info
        %a.d-block{:href => "#"} Alexander Pierce
    %nav.mt-2
      %ul.nav.nav-pills.nav-sidebar.flex-column{"data-accordion" => "false", "data-widget" => "treeview", :role => "menu"}
        %li.nav-item.has-treeview.menu-open
          %a.nav-link.active{:href => "#"}
            %i.nav-icon.fa.fa-dashboard
            %p
              Starter Pages
              %i.right.fa.fa-angle-left
          %ul.nav.nav-treeview
            %li.nav-item
              %a.nav-link.active{:href => "#"}
                %i.fa.fa-circle-o.nav-icon
                %p Active Page
            %li.nav-item
              %a.nav-link{:href => "#"}
                %i.fa.fa-circle-o.nav-icon
                %p Inactive Page
        %li.nav-item
          %a.nav-link{:href => "#"}
            %i.nav-icon.fa.fa-th
            %p
              Simple Link
              %span.right.badge.badge-danger New
    / /.sidebar-menu
  / /.sidebar
