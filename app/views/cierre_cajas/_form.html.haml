-# frozen_string_literal: true
= simple_form_for(@cierre_caja) do |f|
  .row
    .col-md-6
      = f.input :monto
    .col-md-6
      = f.input :observacion
    = f.association :usuario, as: :hidden

  .btn-group.float-right
    = link_to cierre_cajas_path, class: 'btn btn-sm btn-secondary' do
      %i.fa.fa-arrow-left
      Regresar
    = f.button :submit, class: 'btn btn-sm btn-primary'
