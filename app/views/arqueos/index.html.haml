.row.justify-content-center
  .col-md-11
    .card.card-danger.card-outline
      .card-header
        .card-title Listado de Arqueos
        .card-tools
          = link_to new_arqueo_path, class: 'btn btn-sm btn-primary' do
            %i.fa.fa-plus
            Agregar Arqueo
      .card-body
        %table.table.table-hover.table-sm
          %thead.text-right
            %tr
              %th Folio
              %th Monto Sistema
              %th Monto Cajero
              %th Observacion
              %th Fecha de creación
              %th Acción

          %tbody.text-right
            - @arqueos.each do |arqueo|
              %tr
                %td= arqueo.id
                %td= number_to_currency arqueo.monto_sistema
                %td= number_to_currency arqueo.monto_cajero
                %td= arqueo.observacion
                %td= l arqueo.created_at, format: :short
                %td
                  = link_to arqueo, class: 'btn btn-sm btn-info' do
                    %i.fa.fa-eye
                    Ver
