.row.justify-content-center
  .col-md-11
    .card.card-danger.card-outline
      .card-header
        .card-title Listado de Arqueos
        .card-tools
          = link_to new_arqueo_path, class: 'btn btn-sm btn-primary' do
            %i.fa.fa-plus
            Agregar Arqueo
      .card-body
        %table.table.table-hover.text-center
          %thead
            %tr
              %th Monto
              %th Observacion
              %th Fecha de creación
              %th Acción

          %tbody
            - @arqueos.each do |arqueo|
              %tr
                %td= arqueo.monto
                %td= arqueo.observacion
                %td= arqueo.created_at
                %td
                  = link_to arqueo, class: 'btn btn-sm btn-info' do
                    %i.fa.fa-eye
                    Ver
