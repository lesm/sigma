$("#form_modal").html("<%= j render 'contribuyentes/form_modal', contribuyente: @contribuyente %>")

<%- if @contribuyente.valid? %>
  $("select[id$='_contribuyente_id']").html("<%= j options_for_select(contribuyente_for_select(@contribuyente)) %>")
  $("select[id$='_contribuyente_id']").val("<%= @contribuyente %>").trigger("change")

  $("#contribuyente_nuevo").modal("hide")
  swal(
    { 
      title: "<%= @contribuyente %>",
      text: "Contribuyente registrado correctamente",
      icon: 'success'
    }
  )
  <%= @contribuyente = Contribuyente.new(direccion: Direccion.new) %>
  $("#form_modal").html("<%= j render 'contribuyentes/form_modal', contribuyente: @contribuyente %>")
<%- end %>
