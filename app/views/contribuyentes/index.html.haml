.row.justify-content-center
  .col-md-11
    .card.card-danger.card-outline
      .card-header
        .cart-title
          %i.fa.fa-list
          Listado de Contribuyentes
        = render "shared/search", search_path: contribuyentes_path,
          placeholder: "Contribuyentes"

        .card-tools
          = link_to new_contribuyente_path, class: 'btn btn-sm btn-primary' do
            %i.fa.fa-plus
            Agregar Contribuyente
      .card-body
        %table.table.table-hover.text-center
          %thead
            %tr
              %th Nombre o Raz√≥n Social
              %th Tipo
              %th Email
              %th RFC
              %th Acciones

          %tbody
            - @contribuyentes.each do |contribuyente|
              %tr
                %td= contribuyente.nombre_completo
                %td= contribuyente.tipo
                %td= contribuyente.email
                %td= contribuyente.rfc
                %td
                  .btn-group
                    = link_to contribuyente, title: "Ver", class: 'btn btn-sm btn-info' do
                      %i.fa.fa-eye
                    = link_to edit_contribuyente_path(contribuyente), title: "Editar", class: 'btn btn-sm btn-warning' do
                      %i.fa.fa-edit

      .row.justify-content-center
        = paginate @contribuyentes
