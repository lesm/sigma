.row.justify-content-center
  .col-md-11
    .card.card-danger
      .card-header
        .card-title Detalle Contribuyente
      .card-body
        .row
          .col-md-6
            %p
              %b Nombre:
              = @contribuyente.nombre_o_razon_social
            %p
              %b Primer apellido:
              = @contribuyente.primer_apellido
            %p
              %b Segundo apellido:
              = @contribuyente.segundo_apellido
            %p
              %b Persona fisica:
              = @contribuyente.persona_fisica
            %p
              %b Email:
              = @contribuyente.email
            %p
              %b RFC:
              = @contribuyente.rfc
          .col-md-6
            %p
              %b calle:
              = @contribuyente.direccion.calle
            %p
              %b Numero:
              = @contribuyente.direccion.numero
            %p
              %b Colonia:
              = @contribuyente.direccion.colonia
            %p
              %b Código Postal:
              = @contribuyente.direccion.codigo_postal
            %p
              %b Localidad:
              = @contribuyente.direccion.localidad
            %p
              %b Municipio:
              = @contribuyente.direccion.municipio
            %p
              %b Estado:
              = @contribuyente.direccion.estado
            %p
              %b País:
              = @contribuyente.direccion.pais

        .btn-group.float-right
          = link_to contribuyentes_path, class: 'btn btn-sm btn-secondary' do
            %i.fa.fa-arrow-left
            Regresar
          = link_to edit_contribuyente_path(@contribuyente), class: 'btn btn-sm btn-warning' do
            %i.fa.fa-pencil
            Editar
