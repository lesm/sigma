-# frozen_string_literal: true
= simple_form_for(@emisor) do |f|
  .row
    .col-md-6
      = f.input :nombre
      = f.input :rfc
      = f.input :lugar_expedicion
    .col-md-6
      = f.input :regimen_fiscal
      = f.input :registro_patronal
      = f.input :logo

  .btn-group.float-right
    = link_to emisores_path, class: 'btn btn-sm btn-secondary' do
      %i.fa.fa-arrow-left
      Regresar
    = f.button :submit, class: 'btn btn-sm btn-primary'
