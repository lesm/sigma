.row.justify-content-center
  .col-md-11
    .card.card-danger.card-outline
      .card-header
        .card-title Listado de Contribuyentes
        .row
          = form_tag(contribuyentes_path, method: :get, class: "form-inline") do
            .form-group.mx-sm-3.mb-2
              .input-group
                .input-group-prepend
                  %span.input-group-text
                    %i.fa.fa-search
                = text_field_tag :search, params[:search], class: "form-control",
                  id: "search", placeholder: "Buscar Contribuyente", autocomplete: "off"
            .form-group
              = submit_tag "Buscar", class: "btn btn-primary mb-2"

        .card-tools
          = link_to new_contribuyente_path, class: 'btn btn-sm btn-primary' do
            %i.fa.fa-plus
            Agregar Contribuyente
      .card-body
        %table.table.table-hover.text-center
          %thead
            %tr
              %th Nombre o Raz√≥n Social
              %th Tipo
              %th Email
              %th RFC
              %th Acciones

          %tbody
            - @contribuyentes.each do |contribuyente|
              %tr
                %td= contribuyente.nombre_completo
                %td= contribuyente.tipo
                %td= contribuyente.email
                %td= contribuyente.rfc
                %td
                  .btn-group
                    = link_to contribuyente, class: 'btn btn-sm btn-info' do
                      %i.fa.fa-eye
                      Ver
                    = link_to edit_contribuyente_path(contribuyente), class: 'btn btn-sm btn-warning' do
                      %i.fa.fa-pencil
                      Editar

      .row.justify-content-center
        = paginate @contribuyentes
