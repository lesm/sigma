.row.justify-content-center
  .col-md-11
    .card.card-danger.card-outline
      .card-header
        .card-title Detalle Administrador
      .card-body
        .row
          .col-md-4
            %fieldset
              %legend
                %i.fa.fa-user
                &nbsp;
                Informaci√≥n Administrador
            %h6
              Username:
              = @administrador.username
            %h6
              Estado:
              = estado_cajero @administrador

        .btn-group.float-right
          = link_to :back, class: 'btn btn-sm btn-secondary' do
            %i.fa.fa-arrow-left
            Regresar
          = link_to edit_administrador_path(@administrador), class: 'btn btn-sm btn-warning' do
            %i.fa.fa-pencil
            Editar

